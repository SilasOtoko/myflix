<% @categories.each do |category| %>
  <div class="row">
    <h1><%= category.name %></h1>
    <br/>
      <ul>
      <% category.recent_videos.each do |video| %>
        <%= link_to video_path(video) do %>
          <li class="col-md-2">
            <img src="<%= video.small_cover %>" class="small-cover">
            <br/>
            <h1><%= video.title %></h1>
          </li>
        <% end %>
      <% end %>
      </ul>
    </div>
    <br/>
  </div>
<% end %>